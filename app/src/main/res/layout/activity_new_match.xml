<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".NewMatchActivity">
    <AutoCompleteTextView
        android:id="@+id/HomeTeam"
        style="@style/DropDownListViewStyle"
        android:dropDownHeight="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Your Team" />
    <AutoCompleteTextView
        android:id="@+id/AwayTeam"
        style="@style/DropDownListViewStyle"
        android:dropDownHeight="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Opponent Team" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/outlined_spinner"
        android:orientation="horizontal"
        tools:ignore="UselessParent">
            <Spinner
                android:id="@+id/matchType"
                android:theme="@style/DropDownListViewStyle"
                android:layout_width="wrap_content"
                android:layout_weight = "1"
                android:background="@null"
                android:dropDownHeight="250dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:layout_marginLeft="8dp"
                android:textColor="@color/primary_text_color"
                android:entries="@array/toss_winner_selection"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignEnd="@id/matchType"
                android:layout_alignRight="@id/matchType"
                android:src="@drawable/ic_arrow_drop_down_black_16dp"
                android:layout_alignTop="@id/matchType"
                android:layout_alignBottom="@id/matchType"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/primary_text_color"
            android:text="Toss won by" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/outlined_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <Spinner
                android:id="@+id/TossWinner"
                android:theme="@style/DropDownListViewStyle"
                android:layout_width="146dp"
                android:background="@null"
                android:dropDownHeight="250dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:layout_marginLeft="8dp"
                android:textColor="@color/primary_text_color"
                android:entries="@array/toss_winner_selection"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignEnd="@id/TossWinner"
                android:layout_alignRight="@id/TossWinner"
                android:src="@drawable/ic_arrow_drop_down_black_16dp"
                android:layout_alignTop="@id/TossWinner"
                android:layout_alignBottom="@id/TossWinner"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/primary_text_color"
            android:text="Toss decision" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/outlined_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <Spinner
                android:id="@+id/TossDecision"
                android:theme="@style/DropDownListViewStyle"
                android:layout_width="146dp"
                android:dropDownHeight="250dp"
                android:background="@null"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="8dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_alignEnd="@id/TossDecision"
                android:layout_alignRight="@id/TossDecision"
                android:src="@drawable/ic_arrow_drop_down_black_16dp"
                android:layout_alignTop="@id/TossDecision"
                android:layout_alignBottom="@id/TossDecision"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startNewMatch"
            android:layout_width="312dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="2pt"
            app:cornerRadius="6dp"
            android:text="@string/NewMatchActivity_SubmitButtonText"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelNewMatch"
            android:layout_width="312dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:elevation="2pt"
            app:cornerRadius="6dp"
            android:text="@string/NewMatchActivity_CancelButtonText"/>
    </LinearLayout>
</LinearLayout>