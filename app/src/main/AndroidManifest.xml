<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sudoinc.cricketscorer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_csa_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_csa_logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MyApp">
        <activity
            android:name=".ResumeMatchActivity"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name=".ScoreSheetActivity"
            android:label="@string/scoresheetactivity_title"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name=".NewMatchActivity"
            android:label="@string/newmatchactivity_title"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name=".PlayerStatsActivity"
            android:label="@string/title_activity_player_stats"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name=".MyPlayersActivity"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity
            android:name=".MyTeamsActivity"
            android:label="@string/title_activity_my_teams"
            android:theme="@style/Theme.MyApp.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>